@model VolunteerCreateDto
@{
    Layout = null;
}


<!DOCTYPE HTML>
<html lang="en">
<head>
	<title>Account Register</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Account Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
	@*	<script type="application/x-javascript">
	addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
	function hideURLbar(){ window.scrollTo(0,1); } </script>*@
	<!-- Meta tag Keywords -->
	<!-- css files -->
	<link rel="stylesheet" href="/Register/css/style.css" type="text/css" media="all" /> <!-- Style-CSS -->
	<link rel="stylesheet" href="/Register/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->
	<link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">

	<!-- //css files -->
</head>
<body>
	<!-- main -->
	<div class="w3ls-header">
		<h1>Gönüllü Ol</h1>
		<div class="header-main">

			<div class="header-bottom">
				<div class="header-right w3agile">
					<div class="header-left-bottom agileinfo">
						<form method="post">
							<div class="icon1">
								<i class="fa fa-user" aria-hidden="true"></i>
								<input type="text" placeholder="İsminiz" name="Name" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="icon1">
								<i class="fa fa-user" aria-hidden="true"></i>
								<input type="text" placeholder="Soy Adınız" name="Surname" />
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>
							<div class="icon1">
								<i class="fa fa-compass" aria-hidden="true"></i>
								<input type="text" placeholder="Bulunduğunuz Şehir" name="City" />
								<span asp-validation-for="City" class="text-danger"></span>
							</div>
							<div class="icon1">
								<i class="fa fa-envelope" aria-hidden="true"></i>
								<input type="email" placeholder="Mail Adresiniz" name="VolunteerEmail" />
								<span asp-validation-for="VolunteerEmail" class="text-danger"></span>
							</div>
							<div class="icon1">
								<i class="fa fa-phone" aria-hidden="true"></i>
								<input type="tel" placeholder="Telefon Numaranız" name="VolunteerPhone" />
								<span asp-validation-for="VolunteerPhone" class="text-danger"></span>
							</div>
						

							<div class="icon1">
								<i class="fa  fa-info-circle" aria-hidden="true"></i>
								<textarea placeholder="Peki siz neler düşüyorsuz..." name="About" rows="6" cols="50"></textarea>
							
								<span asp-validation-for="About" class="text-danger"></span>
							</div>

							<div class="bottom">
								<input type="submit" value="Başvur" style="margin-left:130px" />
							</div>
							<div asp-validation-summary="ModelOnly" class="text-danger mt-2"> </div>
							

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--header end here-->
	<!-- copyright start here -->

</body>
</html>

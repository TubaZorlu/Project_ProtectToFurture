</head>
<body>
	<!-- main -->
	<div class="w3ls-header">
		<h1>İmza Sayfası</h1>
		<div class="header-main">

			<div class="header-bottom">
				<div class="header-right w3agile">
					<div class="header-left-bottom agileinfo">
						<form method="post">
				
							<input type="hidden" asp-for="CampaignId" />
							
							<div class="icon1">
								<i class="fa fa-user" aria-hidden="true"></i>
								<input type="text" placeholder="İsminiz"  required=""/>								
							</div>
							<div class="icon1">
								<i class="fa fa-user" aria-hidden="true"></i>
								<input type="text" placeholder="Soy Adınız" required="" />
							</div>
						


							<div class="icon1">
								<i class="fa fa-info" aria-hidden="true"></i>
								<label>İmzalanan Kampanya: </label>
								<label >@Model.Campaign.CampaignName</label>													
							</div>

							<div class="bottom">
								<input type="submit" value="İmzala" style="margin-left:130px" />
							</div>
							<div asp-validation-summary="ModelOnly" class="text-danger mt-2"> </div>


						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--header end here-->

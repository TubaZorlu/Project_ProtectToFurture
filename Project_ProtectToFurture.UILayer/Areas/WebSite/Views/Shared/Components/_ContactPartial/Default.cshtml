@model ContactCreateDto
<section class="contact-wthree py-sm-5 py-4" id="contact">
	<div class="container pt-lg-5">
		<div class="title-desc text-center pb-sm-3">
			<h3 class="main-title-w3pvt">contact us</h3>
			<p>Helping animals & working on environmental issues.</p>
		</div>
		<div class="row mt-4">
			<div class="col-lg-5 text-center">
				<h5 class="cont-form" data-blast="color">get in touch</h5>
				<div class="row flex-column">
					<div class="contact-w3">
						<span class="fa fa-envelope-open  mb-3" data-blast="color"></span>
						<div class="d-flex flex-column">
							<a href="mailto:example@email.com" class="d-block">info@dogalyasamvakfi.com</a>
							<a href="mailto:example@email.com" class="my-2 d-block">proje@dogalyasamvakfi.com</a>
							<a href="mailto:example@email.com">gonullu@dogalyasamvakfi.com</a>
						</div>
					</div>
					<div class="contact-w3 my-4">
						<span class="fa fa-phone mb-3" data-blast="color"></span>
						<div class="d-flex flex-column">
							<p>+90 216 265 88 99</p>
							<p class="my-1">+90 212 315 21 66</p>
							<p>+90 532 687 55 45</p>
						</div>
					</div>
					<div class="contact-w3">
						<span class="fa fa-home mb-3" data-blast="color"></span>
						<address>Mühürdar Cad.<br>2115 Sk.<br> Kadıköy Istanbul.</address>
					</div>
				</div>

			</div>
			<div class="col-lg-7">
				<h5 class="cont-form" data-blast="color">contact form</h5>
				<div class="contact-form-wthreelayouts">

					<form asp-action="SendAMail" asp-controller="SiteContact" method="post" class="register-wthree">
						<div class="form-group">
							<label>
								Adınız
							</label>
							<input class="form-control" type="text" placeholder="Adınız" name="Name" id="name">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label>
								Email Adresiniz
							</label>
							<input class="form-control" type="email" placeholder="Mail Adresiniz" name="Email" id="email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label>
								Telefon Numaranız
							</label>
							<input class="form-control" type="text" placeholder="Telefonunuz" name="Phone" id="phone">
							<span asp-validation-for="Phone" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label>
								Mesajınız
							</label>
							<textarea placeholder="Lütfen Mesajınızı Giriniz" class="form-control" name="Message" id="mesaj"></textarea>
							<span asp-validation-for="Message" class="text-danger"></span>
						</div>
						<div class="form-group mb-0">
							<button type="submit" class="btn btn-w3layouts btn-block  bg-theme text-white w-100 font-weight-bold text-uppercase"
									data-blast="bgColor" onclick="onay()">
								Gönder
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>

	</div>

	<script>
		function onay() {
			debugger;
			var nameText = document.getElementById("name").value;
			var numberText = document.getElementById("email").value;
			var dateText = document.getElementById("phone").value;
			var cvvText = document.getElementById("mesaj").value;
			if (nameText != null && nameText != "" && numberText != null && numberText != "" && dateText != null && dateText != "" && cvvText != null && cvvText != "") {

				swal({
					title: "Teşekkürler!",
					text: "Mesajınız tarafımıza iletildi en kısa sürede görüşmek üzere!",
					icon: "success",
					button: "OK!",
				});
			}
			else {
				swal({
					title: "Başarısız!",
					text: "Bir Hata oluştu!",
					icon: "warning",
					button: "OK!",
				});
			}

		}
	</script>

</section>

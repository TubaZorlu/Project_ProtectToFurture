@model List<ProjectListDto>
@{
    ViewData["Title"] = "ProjectListWithDonor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}


<h1>Kaynak Bekleyen Projeler</h1>

<table class="table  table-bordered ">
    <tr>
        <th>No</th>
        <th>Başlık</th>
        <th>Bölge</th>
        <th>Proje Bedeli</th>
        <th>Bağış Yapan</th>
        <th>Bağış Tutarı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        sayac++;
                <tr>
                    <td>@sayac</td>
                    <td>@item.Title</td>
                    <td>@item.Area</td>
                    <td>@item.FundNeed.ToString()</td>
                    <td>@item.Donor.DonorName @item.Donor.DonorSurname</td>
                    <td>@item.Donor.Amout.ToString()</td>
                    <td>@item.Details.Substring(0,25)...</td>         
                    <td><a href="/Admin/Project/ProjectDelete/@item.ProjectId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Admin/Project/ProjectUpdate/@item.ProjectId" class="btn btn-success">Guncelle</a></td>
                    <td><a href="/Admin/Project/GetById/@item.ProjectId" class="btn btn-warning">Detay</a></td>
                </tr>

    }

</table>

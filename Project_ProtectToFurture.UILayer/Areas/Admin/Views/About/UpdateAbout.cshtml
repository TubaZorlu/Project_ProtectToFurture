@model GetAboutByIdQueryResult
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hakkımda Güncelleme Sayfası</h1>


<div class=" container">
	<form method="post">
		<br />
		<input type="hidden" asp-for="AboutId" />
		<br />
		<label> Ana Başlık</label>
		<input type="text" asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
		<br />
		<label>Alt Başlık </label>
		<input type="text" asp-for="Title2" class="form-control" />
		<span asp-validation-for="Title2" class="text-danger"></span>
		<br />
		<label>Açıklama</label>
		<textarea rows="4" cols="50" asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
		<button class="btn btn-success">Güncelle</button>
	</form>
</div>
@model List<DonorListDto>
@{
    ViewData["Title"] = "DonorList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1> Bağışçılar Listesi</h1>

<table class="table  table-bordered">
    <tr>
        <th>No</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Email</th>
        <th>Bağış Tutarı</th>     
       
    </tr>
    @foreach (var item in Model)
    {
        sayac++;
                <tr>
                    <td>@sayac</td>
                    <td>@item.DonorName</td>
                    <td>@item.DonorSurname</td>
                    <td>@item.DonorEmail</td>
                    <td>@item.Amout</td>                             
                </tr>

    }

</table>


